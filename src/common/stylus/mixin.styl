bg-image(url)
  background-image url(url+'@2x.png')
  @media (min-device-pixel-ratio:2.5)
    background-image url(url+'@3x.png')
bg-star(url)
  background-image url('../star/'+ url + '@2x.png')
  @media (min-device-pixel-ratio:2.5)
    background-image url('../star/'+ url + '@3x.png')

border-1px(b-color)
  &:after
    content: ''
    display block
    position: absolute
    left:0
    bottom:0
    width: 100%
    height 1px
    background-color b-color
    transform scaleY(0.5)





@media (min-device-pixel-ratio: 2),(-webkit-min-device-pixel-ratio: 2)
  .border-1px
    &::after
      transform:scaleY(0.5)
      -webkit-transform:scaleY(0.5)
@media (min-device-pixel-ratio: 3),(-webkit-min-device-pixel-ratio: 3)
  .border-1px
    &::after
      transform:scaleY(0.333333333333333333)
      -webkit-transform:scaleY(0.333333333333333333)




















